#homepage, #subscription
{

	#inscription-wrapper
	{
		height: 80vh;
		background-image: url('<%= asset_path('homepage.jpg')%>');
		background-size: cover;
		display: flex;
		justify-content: center;
		align-items: center;


		#inscription
		{
			width: 300px;
			background-color: grey;
			border-radius: 5px;
			text-align: center;
			padding: 10px;
			

			form
			{
				display: flex;
				align-items: center;
				flex-direction: column;
			}
		}
	}

}

