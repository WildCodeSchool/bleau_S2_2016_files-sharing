<div id="index_my_files">
	<p>My saved files</p>
	<%= link_to 'See all my files', media_path, class: "link_to_see_all_my_files" %>
	<div id="uploaded">
		<!-- affichage des fichiers que l'utilisateur a uploadé -->
		<% Medium.search_in_my_files(current_user).order_by_date_desc.limit(10).each do |medium| %>
			<%= render 'file_display', medium: medium %>
		<% end %>
	</div>
	<%= link_to 'Add a file', new_medium_path, class: "btn btn-primary", method: :get %>
</div>
<div id="index_last_files_shared_with_me">
	<p>Last files shared with me</p>
	<!-- affichage des fichiers partagés avec l'utilisateur, groupe + individuel -->
	<% Medium.search_in_files_shared_with_me(current_user).order_by_date_desc.limit(10).each do|medium| %>
		<%= render 'file_display', medium: medium %>
	<% end %>
</div>